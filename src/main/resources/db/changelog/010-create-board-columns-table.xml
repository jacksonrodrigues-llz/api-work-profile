<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="010-create-board-columns-table" author="system">
        <createTable tableName="board_columns">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="position" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="icon_class" type="VARCHAR(100)"/>
            <column name="color_class" type="VARCHAR(50)"/>
            <column name="deletable" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="board_columns"
                                 baseColumnNames="user_id"
                                 constraintName="fk_board_columns_user"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>

        <createIndex tableName="board_columns" indexName="idx_board_columns_user_position">
            <column name="user_id"/>
            <column name="position"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>